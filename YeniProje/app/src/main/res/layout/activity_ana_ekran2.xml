<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF"
	tools:context=".AnaEkran2">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="259dp"
		android:layout_height="140dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="41dp"
		android:layout_marginEnd="24dp"
		android:layout_marginBottom="75dp"
		android:background="#FFFFFF"
		android:onClick="selectImage"
		app:layout_constraintBottom_toTopOf="@+id/adresText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/selectimage" />

	<Button
		android:id="@+id/kaydet2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="134dp"
		android:layout_marginBottom="104dp"
		android:onClick="kaydet2"
		android:text="Kaydet"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="@+id/ucretText"
		app:layout_constraintTop_toBottomOf="@+id/ucretText" />

	<EditText
		android:id="@+id/adresText"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="13dp"
		android:layout_marginEnd="13dp"
		android:layout_marginBottom="29dp"
		android:ems="10"
		android:hint="Evin Adresini Giriniz"
		android:inputType="textPersonName"
		android:textColor="#090909"
		android:textColorHint="#817C7C"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/commentText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView" />

	<EditText
		android:id="@+id/commentText"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="13dp"
		android:layout_marginEnd="13dp"
		android:layout_marginBottom="34dp"
		android:ems="10"
		android:hint="Evin Özelliklerini Giriniz"
		android:inputType="textPersonName"
		android:textColor="#0C0C0C"
		android:textColorHint="#655F5F"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/ucretText"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/adresText" />

	<EditText
		android:id="@+id/ucretText"
		android:layout_width="364dp"
		android:layout_height="50dp"
		android:layout_marginStart="13dp"
		android:layout_marginEnd="13dp"
		android:layout_marginBottom="43dp"
		android:ems="10"
		android:hint="Evin Ücretini Giriniz"
		android:inputType="number"
		android:textColor="#0B0B0B"
		android:textColorHint="#777373"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@+id/kaydet2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.142"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/commentText" />
</androidx.constraintlayout.widget.ConstraintLayout>