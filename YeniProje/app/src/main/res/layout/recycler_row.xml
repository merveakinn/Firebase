<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:id="@+id/recyclerView"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>

	<ImageView
		android:id="@+id/recyclerViewImageView"
		android:layout_width="300dp"
		android:layout_height="250dp"
		android:layout_gravity="center"></ImageView>

	<TextView
		android:id="@+id/recyclerViewUserEmailText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="Kullan覺c覺 email"
		android:textColor="@color/purple_700"
		android:textSize="20dp">

	</TextView>

	<TextView
		android:id="@+id/recyclerViewAdresText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="Adres"
		android:textColor="@color/purple_700"
		android:textSize="20dp">

	</TextView>

	<TextView
		android:id="@+id/recyclerViewUcretText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="Ucret"
		android:textColor="@color/purple_700"
		android:textSize="20dp">

	</TextView>


	<TextView
		android:id="@+id/recyclerViewYorumView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="Kullan覺c覺 yorumu"
		android:textColor="@color/purple_700"
		android:textSize="18dp">

	</TextView>


</LinearLayout>